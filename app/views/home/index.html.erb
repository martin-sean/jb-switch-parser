<% provide(:title, "Games") %>

<div class="container">
  <div class="row">
    <table class="table">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Current Price</th>
        <th scope="col">Discount</th>
        <th scope="col">Highest Price</th>
        <th scope="col">Lowest Price</th>
        <th scope="col">Last Price Change</th>
        <th scope="col"># of Changes</th>
      </tr>
      <% @games.each do |game| %>
        <tr>
          <% current = game.prices.last %>
          <% max = game.prices.maximum('amount') %>
          <% min = game.prices.minimum('amount') %>
          <% discount = percentage(current.amount, max) %>
          <td><%= link_to game.name, jb_link(game.link) %></td>
          <td>$<%= format_decimal(current.amount, 2) %></td>
          <td><%= discount.to_s + '%' unless discount.to_i == 0 %></td>
          <td>$<%= format_decimal(max, 2) %></td>
          <td>$<%= format_decimal(min, 2) %></td>
          <td><i><%= distance_of_time_in_words Time.now, current.created_at %> ago</i></td>
          <td><%= game.prices.size %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
